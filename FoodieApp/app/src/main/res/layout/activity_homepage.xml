<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".ui.HomePageActivity">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
                android:background="#ffff"
                android:id="@+id/toolbar_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
           <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="30dp">
               <ImageView
                       android:id="@+id/homepage_back_button"
                       android:src="@drawable/ic_chevron_left_black_24dp"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintLeft_toLeftOf="parent"
                       app:layout_constraintBottom_toBottomOf="parent"
                       android:layout_width="42dp"
                       android:layout_height="match_parent"/>
               <ImageView
                       android:layout_marginRight="16dp"
                       android:layout_width="36dp"
                       android:layout_height="match_parent"
                       android:src="@drawable/ic_menu_black_24dp"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintRight_toRightOf="parent"
               />

           </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.appbar.AppBarLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
                android:background="#ffff"
                android:id="@+id/toolbar_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:padding="10dp"
                    android:weightSum="100"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:padding="10dp"
                        android:src="@drawable/ic_web_asset_black_24dp"
                        android:layout_weight="20"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                <ImageView
                        android:padding="10dp"
                        android:src="@drawable/ic_forum_black_24dp"
                        android:layout_weight="20"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/user_icon"
                        android:backgroundTint="@color/colorAccent"
                        android:background="@color/colorPrimary"
                        android:src="@drawable/ic_person_black_24dp"
                        android:layout_weight="20"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                <ImageView
                        android:padding="10dp"
                        android:src="@drawable/bell"
                        android:layout_weight="20"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                <ImageView
                        android:padding="10dp"
                        android:src="@drawable/ic_search_black_24dp"
                        android:layout_weight="20"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>


            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".androidfoodieapp.HomePage">
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="64dp"
                android:id="@+id/profile_picture"
                android:src="@drawable/profile_picture_1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="120dp"
                android:layout_height="120dp"/>
        <LinearLayout
                android:id="@+id/profile_name"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/profile_picture"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:text="Sample Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textColor="@color/colorBlack"
                    android:textSize="10dp"
                    android:layout_marginTop="8dp"
                    android:text="SampleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profile_info"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_name"
                android:layout_width="match_parent"

                android:layout_height="wrap_content">
            <LinearLayout
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintTop_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:weightSum="99"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_weight="33"
                    android:gravity="center"
                    android:id="@+id/friends"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="32dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/num_of_friends"
                        android:textColor="@color/colorBlack"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:text="900"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:textColor="@color/colorBlack"
                        android:textAlignment="center"
                        android:textSize="10sp"
                        android:layout_marginTop="8dp"
                        android:text="Friends"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_weight="33"
                    android:gravity="center"
                    android:id="@+id/followers"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/posts"
                    app:layout_constraintLeft_toRightOf="@id/friends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/num_of_followers"
                        android:textColor="@color/colorBlack"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:text="1,500"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:textColor="@color/colorBlack"
                        android:textAlignment="center"
                        android:textSize="10sp"
                        android:layout_marginTop="8dp"
                        android:text="Followers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_weight="33"
                    android:gravity="center"
                    android:id="@+id/posts"
                    android:layout_marginRight="32dp"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/num_of_posts"
                        android:textColor="@color/colorBlack"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:text="40"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:textColor="@color/colorBlack"
                        android:textAlignment="center"
                        android:textSize="10sp"
                        android:layout_marginTop="8dp"
                        android:text="Posts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/add_review_fab"
                android:backgroundTint="@color/colorAccent"
                android:src="@drawable/ic_add_24dp"
                app:fabSize="mini"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/profile_info"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <fragment
                android:id="@+id/review_list_fragment"
                class="com.versilistyson.foodieapp.ReviewListFragment"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/add_review_fab"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                tools:layout="@layout/fragment_homepage_image_list"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>